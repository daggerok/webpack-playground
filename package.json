{
  "version": "0.0.1",
  "name": "webpack-playground",
  "author": "Maksim Kostromin <daggerok@gmail.com>",
  "description": "using webpack 2",
  "main": "src/main.js",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf -rf ./dist",
    "prewebpack": "npm run clean",
    "serve": "npm-run-all build browser-sync",
    "build": "npm run webpack -- --env prod",
    "browser-sync": "browser-sync start -s dist",
    "test": "babel-node ./node_modules/.bin/karma start ./config/karma.conf.js",
    "posttest": "npm run check-coverage",
    "check-coverage": "istanbul check-coverage --statements 44.44 --branches 0 --functions 0 --lines 57.14",
    "tdd": "npm t -- --no-single-run --auto-watch # --singleRun=false --autoWatch=true",
    "webpack": "webpack --config ./config/webpack.config.babel.js --bail --progress",
    "webpack-dev-server": "webpack-dev-server --config ./config/webpack.config.babel.js --bail  --progress",
    "start": "npm run webpack-dev-server -- --env dev"
  },
  "dependencies": {
    "normalize.css": "5.0.0",
    "react": "15.4.2",
    "react-dom": "15.4.2"
  },
  "devDependencies": {
    "autoprefixer": "6.7.6",
    "babel-cli": "6.23.0",
    "babel-loader": "6.4.0",
    "babel-plugin-__coverage__": "11.0.0",
    "babel-plugin-react-html-attrs": "2.0.0",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-plugin-transform-class-properties": "6.23.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-react": "6.23.0",
    "babel-preset-stage-0": "6.22.0",
    "babel-register": "6.23.0",
    "browser-sync": "2.18.8",
    "chai": "3.5.0",
    "css-loader": "0.26.4",
    "extract-text-webpack-plugin": "2.1.0",
    "html-webpack-plugin": "2.28.0",
    "istanbul": "0.4.5",
    "karma": "1.5.0",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-mocha": "1.3.0",
    "karma-webpack": "2.0.2",
    "mocha": "3.2.0",
    "npm-run-all": "4.0.2",
    "postcss": "5.2.16",
    "postcss-loader": "1.3.3",
    "precss": "1.4.0",
    "rimraf": "2.6.1",
    "rucksack-css": "0.9.1",
    "script-ext-html-webpack-plugin": "1.7.1",
    "source-maps-loader": "0.1.9",
    "style-loader": "0.13.2",
    "stylus": "0.54.5",
    "stylus-loader": "3.0.1",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.4.1"
  },
  "babel": {
    "presets": [
      "stage-0",
      "react",
      "es2015"
    ],
    "plugins": [
      "react-html-attrs",
      "syntax-dynamic-import",
      "transform-class-properties"
    ],
    "env": {
      "test": {
        "plugins": [
          [
            "__coverage__",
            {
              "ignore": "*.+(test|spec).js"
            }
          ]
        ]
      }
    }
  }
}
