{
  "name": "webpack2-quickstart",
  "version": "0.0.2",
  "main": "./config/webpack.config.js",
  "scripts": {
    "precompile": "rimraf -rf dist",
    "compile": "webpack --config ./config/webpack.config.js",
    "build": "npm run compile -- -p --env production",
    "start": "concurrently --kill-others 'npm run dev'",
    "dev": "npm-run-all -p watch webpack-dev-server",
    "watch": "npm run compile -- -w --env development",
    "webpack-dev-server": "webpack-dev-server --config ./config/webpack.config.js --env development",
    "serve": "concurrently --kill-others 'npm run build-and-start-server'",
    "build-and-start-server": "npm-run-all build lite-server",
    "lite-server": "lite-server -c ./config/lite-server.config.js"
  },
  "keywords": [],
  "author": "Maksim Kostromin <daggerok@gmail.com>",
  "description": "webpack js app",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "concurrently": "3.3.0",
    "css-loader": "^0.26.2",
    "html-webpack-plugin": "2.28.0",
    "npm-run-all": "4.0.2",
    "postcss-loader": "^1.3.2",
    "rimraf": "^2.6.1",
    "style-loader": "^0.13.2",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.4.1"
  }
}
