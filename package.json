{
  "version": "0.0.1",
  "name": "webpack-playground",
  "author": "Maksim Kostromin <daggerok@gmail.com>",
  "description": "using webpack 2 (RC1)",
  "main": "src/main.js",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf -rf ./dist",
    "prewebpack": "npm run clean",
    "serve": "npm-run-all build browser-sync",
    "build": "npm run webpack -- --env prod",
    "browser-sync": "browser-sync start -s dist",
    "test": "karma start ./config/karma.conf.js",
    "tdd": "npm t -- --no-single-run --auto-watch # --singleRun=false --autoWatch=true",
    "webpack": "webpack --config ./config/webpack.config.babel.js --bail --progress",
    "webpack-dev-server": "webpack-dev-server --config ./config/webpack.config.babel.js --bail  --progress",
    "start": "npm run webpack-dev-server -- --env dev"
  },
  "dependencies": {
    "normalize.css": "^5.0.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.4",
    "babel-cli": "^6.18.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "browser-sync": "^2.18.5",
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "html-webpack-plugin": "^2.24.1",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^1.8.0",
    "mocha": "^3.2.0",
    "npm-run-all": "^3.1.2",
    "postcss": "^5.2.6",
    "postcss-loader": "^1.2.1",
    "rimraf": "^2.5.4",
    "script-ext-html-webpack-plugin": "^1.3.4",
    "source-maps-loader": "^0.1.8",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.4.0",
    "webpack": "^2.2.0-rc.1",
    "webpack-dev-server": "^2.2.0-rc.0"
  },
  "babel": {
    "presets": [
      "stage-0",
      "react",
      "es2015"
    ],
    "plugins": [
      "react-html-attrs",
      "transform-class-properties"
    ]
  }
}
